[user]
  name = Danilo Penna Queiroz
	email = dpenna.queiroz@gmail.com
[alias]
  st = status -bs
  co = checkout
  br = branch -vv
  ci = commit
  cl = clone
  rb = rebase
  cp = cherry-pick
  ai = add --interactive
  sl = log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr)%C(bold blue)<%an>%Creset' --abbrev-commit
  l = log --graph --stat --abbrev-commit
  d = diff --color-words
  wc = whatchanged
  f = fetch --all --tags --prune -v
[push]
  default = current
[branch]
  autosetuprebase = always
[rebase]
  autosquash = true
[diff]
  tool = meld
[core]
  excludesfile = ~/.gitignore_global
  editor = vim
[color]
  ui = true
[color "branch"]
  current = yellow reverse
  local = yellow
  remote = green
[color "diff"]
  meta = yellow bold
  frag = magenta bold
  old = red
  new = green

[commit]
	template = /home/danilo/.git_commit_msg

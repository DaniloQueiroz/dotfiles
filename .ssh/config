# nerderati.com/2011/03/17/simplify-your-life-with-an-ssh-config-file/

IdentityFile ~/.ssh/id_rsa
IdentityFile ~/.ssh/danilo-awskey2017.pem
AddKeysToAgent yes

Host straylight
    HostName straylight.brzl
    Port 22
    User root

host bastion
    hostname bastion.eventmobi.com
    user danilo
    ForwardAgent yes
    identityfile ~/.ssh/danilo-awskey2017.pem

host *.eventmobi.com
    user danilo
    identityfile ~/.ssh/danilo-awskey2017.pem

Host *.amazonaws.com
    User danilo
    identityfile ~/.ssh/danilo-awskey2017.pem

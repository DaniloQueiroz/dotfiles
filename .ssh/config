# nerderati.com/2011/03/17/simplify-your-life-with-an-ssh-config-file/

IdentityFile ~/.ssh/id_rsa
AddKeysToAgent yes

Host straylight
    ForwardAgent yes
    HostName straylight.brzl
    Port 22
    User root
    identityfile ~/.ssh/id_rsa

Host molly
    ForwardAgent yes
    HostName 192.168.42.117
    Port 22
    User danilo
    identityfile ~/.ssh/id_rsa

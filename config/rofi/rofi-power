#!/bin/bash

logout="Logout"
lock_screen="LockScreen"
standby="Suspend"
reboot="Reboot"
shutdown="Shutdown"

if [ -z "$@" ]; then
  options=($logout $lock_screen $standby $reboot $shutdown)
  printf '%s\n' "${options[@]}"
else
  case "$1" in
    $logout)
        loginctl terminate-session $XDG_SESSION_ID
        ;;
    $lock_screen)
        loginctl lock-session
        ;;
    $standby)
        systemctl suspend
        ;;
    $logout)
        loginctl terminate-session $XDG_SESSION_ID
        ;;
    $reboot)
        systemctl reboot
        ;;
    $shutdown)
        systemctl poweroff
        ;;
  esac

fi

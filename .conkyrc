# Fork application to background
background yes

# Windows config
own_window yes
own_window_argb_visual true
own_window_argb_value 150
own_window_transparent no
own_window_type normal
own_window_hints undecorated,below,sticky,skip_taskbar,skip_pager
alignment top_right


# Font config
use_xft yes
xftfont Ubuntu:size=8
xftalpha 0
override_utf8_locale yes

# Colors
default_color white
default_shade_color lightgrey


# Border and shades
draw_shades no
draw_outline no
draw_borders no

# General config / update, n samples
update_interval 1.5
cpu_avg_samples 2
total_run_times 0

# Content
TEXT
${font ubuntu:bold:size=10}${color Tan1}${nodename}${color}
${font ubuntu:bold:size=9}
Linux ${kernel} ${machine}
Uptime ${uptime}

${font ubuntu:bold:size=9}${color Tan1}PROCESSOR ${color white} ${hr 2}
${font ubuntu:bold:size=8}  CPU: ${font}${cpu cpu0}%
${font ubuntu:bold:size=8}  CPU Temp: ${font}${exec sensors | grep Physical | awk '{print $4}'}
${font ubuntu:bold:size=8}  CPU Frequency: ${font}${freq_g} GHz

${font ubuntu:bold:size=9}${color Tan1}MEMORY ${hr 2}${color white}
${font ubuntu:bold:size=8}  RAM: ${font} [${memperc}%] $mem / $memmax
${font ubuntu:bold:size=8}  SWAP:  ${font} [${swapperc}%]  $swap / $swapmax

${font ubuntu:bold:size=9}${color Tan1}DISKS ${hr 2}${color white}
${font ubuntu:bold:size=8}  /:  ${font}[${fs_used_perc /}%] ${fs_used /} / ${fs_size /}
${font ubuntu:bold:size=8}  /home: ${font}[${fs_used_perc /home}%]  ${fs_used /home} / ${fs_size /home}

${font ubuntu:bold:size=9}${color Tan1}NETWORK ${hr 2}${color white}
${font ubuntu:bold:size=8}  Public IP:${font} ${exec http -b get http://ifconfig.me/ip.json }

${font ubuntu:bold:size=8}  Eth0
${font ubuntu:bold:size=8}    Eth0 Address: ${font}${addrs eth0}
${font ubuntu:bold:size=8}    Dowload Speed: ${font}${downspeed eth0} kb/s
${font ubuntu:bold:size=8}    Upload Speed: ${font}${upspeed eth0} kb/s

${font ubuntu:bold:size=8}  WLan0
${font ubuntu:bold:size=8}    WLan0 Address: ${font}${addrs wlp3s0}
${font ubuntu:bold:size=8}    ESSID:  ${font}${wireless_essid wlp3s0}
${font ubuntu:bold:size=8}    Frequency:  ${font}${exec iwconfig wlp3s0|grep Frequency | awk '/:/ { print $2" " $3 }' | cut -d':' -f2 }
${font ubuntu:bold:size=8}    Connection quality: ${font}${wireless_link_qual_perc wlp3s0}%
${font ubuntu:bold:size=8}    Dowload Speed: ${font}${downspeed wlp3s0} kb/s
${font ubuntu:bold:size=8}    Upload Speed: ${font}${upspeed wlp3s0} kb/s


[colors]
alpha = #00000000
background = #2E3440
foreground = #D8DEE9
dark-gray = #4C566A
light-gray = #E5E9F0
red = #BF616A
green = #A3BE8C
yellow = #EBCB8B
blue = #81a1c1
cyan = #88c0d0
primary = ${colors.blue}
background-alt = ${colors.dark-gray}
foreground-alt = ${colors.light-gray}
alert = ${colors.yellow}

[bar/main]
monitor = ${env:MONITOR:}
width = 3440:-50
height = 25
radius = 0
fixed-center = true
background = ${colors.background}
foreground = ${colors.foreground}
line-size = 3
offset-x = 24
offset-y = 12
border-size = 0
border-color = ${colors.alpha}
padding-left = 1
padding-right = 2
module-margin-left = 1
module-margin-right = 2
font-0 = RobotoMono:size=12;3
font-1 = FontAwesome5Free:style=Solid:pixelsize=10;1
font-2 = FontAwesome5Free:style=Regular:pixelsize=10;1
font-3 = FontAwesome5Brands:pixelsize=10;1
modules-left = bspwm
modules-center = window
modules-right = memory cpu temperature wlan eth pulseaudio datetime
wm-restack = bspwm
override-redirect = false
cursor-click = pointer
cursor-scroll = ns-resize

[module/bspwm]
type = internal/bspwm

pin-workspaces = true
label-focused = %icon%
label-focused-background = ${colors.background}
label-focused-foreground = ${colors.primary}
label-focused-padding = 1
label-focused-font = 1

label-occupied = %icon%
label-occupied-padding = 1
label-occupied-foreground = ${colors.foreground}
label-occupied-font = 2

label-urgent = %icon%
label-urgent-foreground = ${colors.alert}
label-urgent-padding = 1
label-urgent-font = 2

label-empty = %icon%
label-empty-background = ${colors.background}
label-empty-foreground = ${colors.dark-gray}
label-empty-padding = 1
label-empty-font = 2

ws-icon-default = 
ws-icon-default-font = 2

[module/window]
type = internal/xwindow
format = <label>
format-foreground = ${colors.primary}
format-padding = 4

label = %title%
label-maxlen = 50

; Used instead of label when there is no window title
; Available tokens:
;   None
label-empty = Empty
label-empty-foreground = #707880


[module/memory]
type = internal/memory
interval = 1

format = <label>
label = %gb_used%
label-foreground = ${colors.foreground-alt}
format-prefix-foreground = ${colors.primary}
format-prefix = " "

[module/cpu]
type = internal/cpu
interval = 0.5

format = <label>
label = %percentage%%
label-foreground = ${colors.foreground-alt}
format-prefix-foreground = ${colors.primary}
format-prefix = " "

[module/wlan]
type = internal/network
interface = wlan0
interval = 3.0
format-connected = <label-connected>
format-connected-prefix = " "
format-connected-prefix-foreground = ${colors.primary}
label-active-font = 2
label-connected = %essid%

[module/eth]
type = internal/network
interface = eno1
interval = 3.0
format-connected-prefix = " "
format-connected-prefix-foreground = ${colors.primary}
label-connected = %local_ip%

[module/datetime]
type = internal/date
interval = 5
time = %H:%M
date = "%d/%m/%Y"
format-prefix = " "
format-prefix-foreground = ${colors.primary}
label = %time% %date%

[module/pulseaudio]
type = internal/pulseaudio
format-volume = <label-volume>
label-volume = %percentage%%
label-volume-foreground = ${root.foreground}
label-muted = MUTED 
label-muted-foreground = ${colors.foreground-alt}
format-volume-prefix = " "
format-muted-prefix = " "
format-volume-prefix-foreground = ${colors.primary}
format-muted-prefix-foreground = ${colors.green}
bar-volume-empty-foreground = ${colors.foreground-alt}

click-right = pavucontrol&

[module/temperature]
type = internal/temperature
hwmon-path = /sys/devices/platform/coretemp.0/hwmon/hwmon2/temp1_input
thermal-zone = 0
warn-temperature = 75
format = <label>
format-warn = <label-warn>
format-prefix = " "
format-warn-prefix = " "
format-prefix-foreground = ${colors.primary}
format-warn-prefix-foreground = ${colors.red}
label = %temperature-c%

[settings]
screenchange-reload = true
pseudo-transparency = true

[global/wm]
margin-top = 0
margin-bottom = 0
